<% if flash[:notice] %>
	<div class="flash">
		<%= flash[:notice] %>
	</div>
<% end %>

<p id="notice"></p>

<h1>Books</h1>

<table>
	<thead>
		<tr>
			<th class="title">Title</th>
			<th class="body">Body</th>
		</tr>
		<% @books.each do |book| %>
		<tr>
			<td>
				<span><%= book.title %></span>
			</td>
			<td>
				<span><%= book.body %></span>
			</td>
			<td>
				<%= link_to "Show", book_path(book) %>
			</td>
			<td>
				<%= link_to "Edit", edit_book_path(book) %>
			</td>
			<td>
				<%= link_to "Destroy", book_path(book), method: :delete, "data-confirm" => "Are you sure?" %>
			</td>
		<tr>
		<% end %>
	</thead>
</table>

<h2>New book</h2>
<!-- form_for部分 -->
<%= form_for(@book) do |f| %>

	<% if @book.errors.any? %>
		<div id="error_explanation">
			<h2><%= @book.errors.count %> errors prohibited this book from being saved:</h2>
			<ul>
			<% @book.errors.full_messages.each do |message| %>
				<li><%= message %></li>
			<% end %>
			</ul>
		</div>
	<%end %>

	<h4>Title</h4>
	<%= f.text_field :title %>

	<h4>Body</h4>
	<%= f.text_area :body %>
	<div>
		<%= f.submit 'Create Book' %>
	</div>

<% end %>